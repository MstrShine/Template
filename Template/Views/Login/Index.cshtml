@model Template.Models.User.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<h1 class="display-4">Login</h1>

<div>
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input class="form-control" placeholder="Username" required asp-for="Username" />
            </div>
            <div class="form-group">
                <input class="form-control" placeholder="Password" required type="password" asp-for="Password" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>
        </form>
    </div>
</div>